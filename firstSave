  std::cout << "Type s on your keyboard" << "\n" << "\n";

  

  std::cin >> attackBtnForSwing; 

  if (attackBtnForSwing != 's'){
    std::cout << "You missed, your attack will not work now twin ✌️";
    printHP();
  }

