#include<iostream>
#include<string>
#include<vector>
#include <random>

int swingShot (char attackButton, int bodyparnum){
    int damageDone = 0;
    std::random_device rd;
    std::mt19937 gen(rd());

  std::uniform_int_distribution<> chanceHit(0,4);

  int chance = chanceHit(gen);

  switch (bodyparnum){
    case 1:
    damageDone = 1;
    break;
    case 2:
    if (chance >= 1){
      damageDone = 2;
    }
    break;
    case 3:
    if (chance >= 2){
      damageDone = 3;
    }
    break;
    case 4:
    if (chance >= 3){
      damageDone = 4;
    }
    break;
    if (chance == 4){
      damageDone = 5;
    }
    break;
  }

  int finalDamage = damageDone * 2;
  return finalDamage;
    
}

